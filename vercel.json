{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/telegram",
      "dest": "/api/telegram.js"
    },
    {
      "src": "/api/verify-telegram",
      "dest": "/api/verify-telegram.js"
    },
    {
      "src": "/api/confirm",
      "dest": "/api/confirm.js"
    },
    {
      "src": "/api/reset-password",
      "dest": "/api/reset-password.js"
    },
    {
      "src": "/video/([^/]+)",
      "dest": "/api/video.js?id=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/build/web/$1"
    }
  ]
}