{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/web/**",
      "use": "@vercel/static"
    },
    {
      "src": "video/[id].html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/telegram",
      "dest": "/api/telegram.js"
    },
    {
      "src": "/api/verify-telegram",
      "dest": "/api/verify-telegram.js"
    },
    {
      "src": "/video/([^/]+)",
      "dest": "/video/[id].html"
    },
    {
      "src": "/(.*)",
      "dest": "/build/web/$1"
    }
  ]
}
